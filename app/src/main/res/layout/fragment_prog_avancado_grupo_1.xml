<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_avancado_grupo_1_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".programacao.avancado.frag_prog_avancado_grupo_1">


    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/avancado_lambdas_fluxos_java_se_8"
        android:layout_width="186dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/botao_vermelho_degrade_animacao_list"
        android:fontFamily="casual"
        android:paddingTop="3dp"
        android:text="Lambdas e fluxos Java SE 8"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/avancado_recursao"
        android:layout_width="186dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/botao_vermelho_degrade_animacao_list"
        android:fontFamily="casual"
        android:paddingTop="4dp"
        android:text="Recursão"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avancado_lambdas_fluxos_java_se_8"
        tools:text="Recursão" />

    <Button
        android:id="@+id/avancado_pesquisa_classificacao_big_o"
        android:layout_width="186dp"
        android:layout_height="86dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/botao_vermelho_degrade_animacao_list"
        android:fontFamily="casual"
        android:paddingTop="3dp"
        android:text="Pesquisa, classificação e Big O"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avancado_recursao" />


    />


    <Button
        android:id="@+id/avancado_classes_metodos_genericos"
        android:layout_width="186dp"
        android:layout_height="67dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/botao_vermelho_degrade_animacao_list"
        android:fontFamily="casual"
        android:paddingTop="3dp"
        android:text="Classes e métodos genéricos"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avancado_pesquisa_classificacao_big_o" />

    <ImageView
        android:id="@+id/avancado_btn_next_grupo_1"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avancado_classes_metodos_genericos" />

    <ImageView
        android:id="@+id/avancado_btn_prev_grupo_1"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/btn_prev"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avancado_classes_metodos_genericos" />

    <TextView
        android:id="@+id/home_avancado_grupo_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/delius"
        android:background="@drawable/home_aulas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toStartOf="@+id/avancado_btn_next_grupo_1"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toEndOf="@+id/avancado_btn_prev_grupo_1"
        app:layout_constraintTop_toBottomOf="@+id/avancado_classes_metodos_genericos" />

</android.support.constraint.ConstraintLayout>