<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_azul"
    tools:context=".activity_escolher_opcao">

    <TextView
        android:id="@+id/escolher_opcao_texto"
        android:layout_width="353dp"
        android:layout_height="130dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="25dp"
        android:gravity="fill"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/escolher_opcao_segunda"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/escolher_opcao_segunda"
        app:layout_constraintVertical_bias="0.615" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="@string/title_activity_escolher_opcao"
        app:titleTextColor="@color/white" />

    <ImageView
        android:id="@+id/escolher_opcao_primeira"
        android:layout_width="361dp"
        android:layout_height="116dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/primeira_opcao"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <View
        android:id="@+id/view"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_marginTop="130dp"
        android:background="@color/cinza_transparente"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/escolher_opcao_primeira"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/escolher_opcao_primeira" />

    <ImageView
        android:id="@+id/escolher_opcao_segunda"
        android:layout_width="359dp"
        android:layout_height="115dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/segunda_opcao"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <View
        android:id="@+id/view2"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_marginTop="130dp"
        android:background="@color/cinza_transparente"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/escolher_opcao_segunda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/escolher_opcao_segunda" />

    <ImageView
        android:id="@+id/escolher_opcao_personagem"
        android:layout_width="153dp"
        android:layout_height="217dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/personagem_sem_oculos"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/escolher_opcao_texto1"
        android:layout_width="353dp"
        android:layout_height="130dp"
        android:layout_marginBottom="32dp"
        android:gravity="fill"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/escolher_opcao_primeira"
        app:layout_constraintTop_toTopOf="@+id/escolher_opcao_primeira"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/escolher_opcao_texto2"
        android:layout_width="353dp"
        android:layout_height="130dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="28dp"
        android:gravity="fill"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/escolher_opcao_segunda"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/escolher_opcao_segunda"
        app:layout_constraintVertical_bias="0.615" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="184dp"
        android:layout_height="106dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/escolher_opcao_personagem"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:srcCompat="@drawable/mensagem_laranja_quadrada" />

    <TextView
        android:id="@+id/escolher_opcao_fala"
        android:layout_width="154dp"
        android:layout_height="109dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:gravity="fill"
        android:text="Escolha a opção que você achar melhor para seus estudos"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.13"
        tools:text="Escolha a opção que você achar melhor para seus estudos" />



</android.support.constraint.ConstraintLayout>